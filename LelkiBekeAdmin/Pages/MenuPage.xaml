<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LelkiBekeAdmin.Pages.MenuPage"
             Title="MenuPage"
             >
    <StackLayout>
        <ScrollView Orientation="Horizontal">
            <CollectionView ItemsSource="{Binding Categories}" ItemsLayout="HorizontalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Name}" BorderColor="{StaticResource ButtonDef}" BorderWidth="2" BackgroundColor="{StaticResource ButtonHover}" WidthRequest="100" Margin="10,10,10,0" Command="{Binding CategorySelectedBtnCommand}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
        <!--Datatemplate : SwipeView to delete item or update + update page-->
        <ScrollView VerticalOptions="FillAndExpand">
            <CollectionView Margin="0" ItemsSource="{Binding FilteredMenuItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Reveal">
                                    <!-- Remove action -->                                   
                                    <SwipeItem IconImageSource="{x:StaticResource RemoveIcon}"
                                               BackgroundColor="Red"                                               
                                               Command="{Binding BindingContext.RemoveItemCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}" CommandParameter="{Binding .}"/>                
                                    <SwipeItem IconImageSource="{x:StaticResource ModifyIcon}"
                                               BackgroundColor="{StaticResource ButtonDef}"                                               
                                               Command="{Binding BindingContext.NavigateToModifyCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}" CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <Frame Padding="10"
                                   Margin="10"
                                   CornerRadius="8"
                                   HasShadow="True">
                                    <StackLayout>
                                        <!-- Kép megjelenítése -->
                                    <Image Source="{Binding Image_url}"
                                       Aspect="AspectFill"
                                       HeightRequest="150" />

                                    <!-- Név -->
                                                        <Label Text="{Binding Name}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   Margin="0,10,0,0" />

                                                        <!-- Kategória -->
                                                        <Label Text="{Binding Category_name}"
                                   FontSize="14"
                                   TextColor="Gray" />

                                                        <!-- Leírás -->
                                                        <Label Text="{Binding Description}"
                                   FontSize="14"
                                   LineBreakMode="TailTruncation" />

                             <!-- Ár -->
                            <Label Text="{Binding Price}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="Green" />
                                </StackLayout>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            </ScrollView>
            <AbsoluteLayout BackgroundColor="Transparent" HeightRequest="0">
                <Button Text="+" 
                        FontSize="30"
                        WidthRequest="60" 
                        HeightRequest="60" 
                        BackgroundColor="{StaticResource Header}" 
                        TextColor="White" 
                        CornerRadius="30"
                        BorderWidth="0"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds="0.94,1,60,60"
                        Margin="10"
                        VerticalOptions="End"
                        HorizontalOptions="Start"
                        Command="{Binding AddItemCommand}" />
        </AbsoluteLayout>
    </StackLayout>
   
</ContentPage>