<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LelkiBekeAdmin.Pages.MainPage">

    <StackLayout Padding="20" VerticalOptions="Center" BackgroundColor="{StaticResource White}">
        <Image Source="dotnet_bot.png" HeightRequest="100" HorizontalOptions="Center" />

        <Label Text="Welcome Admin!" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="{StaticResource Header}"/>
        <Label Text="Login for more" 
               FontSize="14" 
               HorizontalOptions="Center" />
        <Frame BackgroundColor="White" CornerRadius="30" HeightRequest="50" Margin="0,10">
            <Entry Placeholder="Email" TextColor="Black"  Margin="0" HeightRequest="40"/>
        </Frame>
        <Frame BackgroundColor="White" CornerRadius="30" HeightRequest="50" Margin="0,10">
                <Entry Placeholder="Password" IsPassword="True" TextColor="Black" Margin="0" HeightRequest="40" />
        </Frame>

        <Button Text="LOGIN" 
                BackgroundColor="{StaticResource ButtonDef}" 
                TextColor="White" 
                CornerRadius="25" 
                HeightRequest="50"
                Margin="0,10"
                Command="{Binding NavigateToMenuCommand}"/>

        <Label Text="Forgot password?" 
               FontSize="14" 
               TextColor="{StaticResource Header}" 
               HorizontalOptions="Center"
               Margin="0,10"/>

        <Label Text="Don't have an account? "
               FontSize="14" 
               HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}" />
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>

</ContentPage>
