<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LelkiBekeAdmin.Pages.RegisterPage"
             Title="RegisterPage">
    <StackLayout Padding="20" VerticalOptions="Center" BackgroundColor="{StaticResource White}">
        <Image Source="logo.png" HeightRequest="100" HorizontalOptions="Center" />

        <Label Text="Create an Account" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="{StaticResource Header}"/>

        <Frame BackgroundColor="White" CornerRadius="30" HeightRequest="50" Margin="0,10">
            <Entry Placeholder="Full Name" TextColor="Black"  Margin="0" HeightRequest="40"/>
        </Frame>
        <Frame BackgroundColor="White" CornerRadius="30" HeightRequest="50" Margin="0,10">
            <Entry Placeholder="Email" IsPassword="True" TextColor="Black" Margin="0" HeightRequest="40" />
        </Frame>
        <Frame BackgroundColor="White" CornerRadius="30" HeightRequest="50" Margin="0,10">
            <Entry Placeholder="Password" IsPassword="True" TextColor="Black" Margin="0" HeightRequest="40" />
        </Frame>
        <Frame BackgroundColor="White" CornerRadius="30" HeightRequest="50" Margin="0,10">
            <Entry Placeholder="Confirm password" IsPassword="True" TextColor="Black" Margin="0" HeightRequest="40" />
        </Frame>

        <Button Text="REGISTER" 
                BackgroundColor="{StaticResource ButtonDef}" 
                TextColor="White" 
                CornerRadius="25" 
                HeightRequest="50"
                Command="{Binding NavigateToMenuCommand}"/>

        <Label Text="Already have an account? "
               FontSize="14" 
               HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}"/>
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
</ContentPage>